<h1>Edit a article</h1>

<% if @article.errors.any? %>

  <h2> The following errors prevented article from being saved </h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
  
<% end %>

<%= form_with(model: @article, local: true) do |f| %> <%# we define which model we are talking about via scope, give it url to submit via url %>
  <p>
    <%= f.label :title %> <br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> <br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= button_to 'Return to listings', articles_path, class: 'btn btn-primary', method: :get %>