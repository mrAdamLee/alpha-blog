<h1>Articles listing page:</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.id  %></td>  
      <td><%= article.title  %></td>  
      <td><%= article.description  %></td>  
    </tr>
    <% end %>
  </tbody>
</table>